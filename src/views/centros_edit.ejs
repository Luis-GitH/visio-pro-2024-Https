<% include partials/head %>
  </head>

  <body>
    <% include partials/header %>

<div class="container mx-auto">
  <div class="card  col-md-7 mx-auto">
    <div class="card-title">
      <h4 class="text-center">Edicción  datos del centro</h4>
    </div>

    <form action="/edit/<%= centro._id %>" method="POST">
    
      <div class="card-body" >

        <div class="form-group  row">
          <label for="codigo" class="col-2 control-label">Codigo Centro</label>
          <div class="col-7">
            <input type="text" name=codigo  class="form-control"  value="<% if (typeof centro != 'undefined') { %><%= centro.codigo %><% } %>" autofocus />
          </div>
        </div>
        
        <div class="form-group row">
          <label for="nombreCentro" class="col-2 control-label">Nombre Centro</label>
          <div class="col-7">
            <input type="text" name="nombreCentro"  class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.nombreCentro %><% } %>" autofocus />
          </div>
        </div>

        <div class="form-group row">
          <label for="email" class="col-2 control-label">email</label>
          <div class="col-7">
            <input type="text" name="email"  class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.email %><% } %>" autofocus />
          </div>
        </div>

        <div class="form-group row">
          <label for="movil" class="col-2 control-label">Móvil</label>
          <div class="col-7">
            <input type="text" name="movil"  class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.movil %><% } %>" autofocus />
          </div>
        </div>

        <div class="form-group row">
          <label for="director" class="col-2 control-label">Director</label>
          <div class="col-7">
            <input type="text" name="director" class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.director %><% } %>" autofocus />
          </div>
        </div>

        <div class="form-group row">
          <label for="nombre" class="col-2 control-label">Nombre</label>
          <div class="col-7">
            <input type="text" name="nombre"  class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.nombre %><% } %>" autofocus />
          </div>
        </div>

        <div class="form-group row">
          <label for="password" class="col-2 control-label">Password</label>
          <div class="col-7">
            <input type="text" name="password"  class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.password %><% } %>" autofocus />
          </div>
        </div>

        <div class="form-group row">
          <label for="clave" class="col-2 control-label">Clave</label>
          <div class="col-7">
            <input type="text" name="clave"  class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.clave %><% } %>" autofocus />
          </div>
        </div>

        <div class="form-group row" >
          <label for="role" class="col-2 control-label">Role</label>
          <div class="col-7">
            <input type="text" name="role"  class="form-control" value="<% if (typeof centro != 'undefined') { %><%= centro.role %><% } %>" autofocus />
          </div>
        </div>
      </div>
      <div class="card-footer mx-auto text-center" >
        <a class="btn btn-danger mx-2" href="/centros">Cancelar</a>         
        <button type="submit" id="btnGuardar" class="btn btn-primary">Guardar</button>
      </div>
    </form>
  </div>
</div>

<% include partials/footer %></body>